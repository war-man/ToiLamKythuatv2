@model ToiLamKythuat.Models.Category

@{
    ViewData["Title"] = "Thêm mới danh mục bài viết";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Thêm danh mục</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="code" class="control-label"><b>Mã quản lý</b></label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"><b>Tên</b></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Thoát</a>
            </div>
        </form>
    </div>
</div>

