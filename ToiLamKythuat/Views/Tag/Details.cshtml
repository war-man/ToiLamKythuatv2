@model ToiLamKythuat.Models.Tag

@{
    ViewData["Title"] = "Chi tiết thẻ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div>
    <h4>Chi tiết thẻ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã quản lý
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Tên thẻ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tagName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.id">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-dark">Thoát</a>
</div>
