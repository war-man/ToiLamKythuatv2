@model ToiLamKythuat.Models.Tag

@{
    ViewData["Title"] = "Xóa thẻ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h3>Bạn đồng ý xóa thẻ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã quản lý
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Tên thẻ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tagName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Thoát</a>
    </form>
</div>
