@model ToiLamKythuat.Models.User

@{
    ViewData["Title"] = "Thông tin thành viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div>
    <h4>Thành viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.password)
        </dd>
        <dt class="col-sm-2">
            Kích hoạt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isActive)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.username">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-dark">Thoát</a>
</div>
