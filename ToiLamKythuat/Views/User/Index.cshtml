@model IEnumerable<ToiLamKythuat.Models.User>

@{
    ViewData["Title"] = "Danh sách thành viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Thành viên</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm thành viên</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tài khoản
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Kích hoạt
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.username">Sửa</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.username">Chi tiết</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.username">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
