@model ToiLamKythuat.Models.User

@{
    ViewData["Title"] = "Cập nhật thành viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Cập nhật thành viên</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label"><b>Tài khoản</b></label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"><b>Mật khẩu</b></label>
                <input asp-for="password" class="form-control"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isActive" /> <b>Kích hoạt</b>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Thoát</a>
            </div>
        </form>
    </div>
</div>

